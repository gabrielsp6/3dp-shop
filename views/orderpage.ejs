                <li>
                    <%= value.title %> X <%= value.quantity %> 
                </li>
                <!-- DISPLAY PRODUCT TITLE -->
            </h5>
            
            
            <!-- DISPLAY PRODUCT DESCRIPTION -->
            
            
            
            
            <% } %>
            
        </ul>

        <h4>Address: <%= order.address %>  </h4>
        
        <h2 id="delete-order">
           Delete order <i class="fa fa-trash" aria-hidden="true"></i>
        </h2>
